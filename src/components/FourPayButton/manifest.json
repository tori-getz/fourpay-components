{
  "displayName": "FourPay Button",
  "defaultWidth": 160,
  "defaultHeight": 24,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
  "props": [
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Оплатить с помощью 4Pay"
    },
    {
      "name": "color",
      "displayName": "Color",
      "type": "color"
    },
    {
      "name": "rounding",
      "displayName": "Rounding",
      "type": "number",
      "default": 4,
      "control": { "type": "slider", "max": 18, "min": 0 }
    },
    {
      "name": "fourPayLogin",
      "displayName": "4Pay login",
      "type": "text",
      "default": "Happy Hacking"
    },
    {
      "name": "fourPayPassword",
      "displayName": "4Pay password",
      "type": "text",
      "default": "Happy Hacking"
    },
    {
      "name": "onWidgetCreated",
      "displayName": "On payment widget created",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Widget URL"
        }
      ]
    },
    {
      "name": "onPaymentError",
      "displayName": "On payment error",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Error text"
        }
      ]
    },
    {
      "name": "onError",
      "displayName": "On error",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Error text"
        }
      ]
    }
  ]
}