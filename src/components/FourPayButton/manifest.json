{
  "displayName": "FourPay Button",
  "defaultWidth": 160,
  "defaultHeight": 24,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
  "props": [
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Оплатить с помощью 4Pay"
    },
    {
      "name": "color",
      "displayName": "Color",
      "type": "color"
    },
    {
      "name": "fourPayLogin",
      "displayName": "4Pay login",
      "type": "text"
    },
    {
      "name": "fourPayPassword",
      "displayName": "4Pay password",
      "type": "text"
    },
    {
      "name": "amount",
      "displayName": "Amount",
      "type": "number"
    },
    {
      "name": "description",
      "displayName": "Description",
      "type": "text"
    },
    {
      "name": "txid",
      "displayName": "TXID",
      "type": "text"
    },
    {
      "name": "customer",
      "displayName": "Customer",
      "type": "text"
    },
    {
      "name": "onWidgetCreated",
      "displayName": "On Payment Widget created",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Payment URL"
        }
      ]
    },
    {
      "name": "onPaymentSuccess",
      "displayName": "On payment success"
    },
    {
      "name": "onPaymentError",
      "displayName": "On payment error",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Error text"
        }
      ]
    },
    {
      "name": "onError",
      "displayName": "On error",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Error text"
        }
      ]
    }
  ]
}